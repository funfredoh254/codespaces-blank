    <script>
        function showLoading() {
            setTimeout(() => {
                document.getElementById('loading').style.display = 'none';
                document.getElementById('app').style.display = 'block';
            }, 2000);
        }

        function showSection(section) {
            const sections = document.querySelectorAll('.section');
            sections.forEach(s => s.classList.remove('active'));
            document.getElementById(section).classList.add('active');
        }

        function showCategory(category) {
            const products = document.getElementById('products');
            products.innerHTML = ''; // Clear previous products
            let productData = [];

            if (category === 'electronics') {
                productData = [
                    { img: 'https://i.imgur.com/hlghZd2.jpeg', name: 'USB Multi-cable', price: 'KSh 800', desc: 'This versatile cable features multiple connectors, allowing you to transfer data to various devices' },
                    { img: 'https://i.imgur.com/oiIxZI3.jpeg', name: 'HDMI cable', price: 'KSh 2000', desc: 'With support for 4K resolution and advanced features like Ethernet connectivity and 3D support' },
                    { img: 'https://i.imgur.com/m9TrPAL.jpeg', name: 'USB cables', price: 'KSh 600', desc: 'Made with high-quality materials, it features a sturdy design that resist tangling and wear ' },
                    { img: 'https://i.imgur.com/gslk8AP.jpeg', name: 'Wired mouse', price: 'KSh 500', desc: 'This mouse features a responsive sensor that ensures accurate tracking, making it perfect for both work and gaming ' }
                ];
            } else if (category === 'men') {
                productData = [
                    { img: 'https://i.imgur.com/C6j1ue7.jpeg', name: 'Short sleeve shirt', price: 'KSh 1500', desc: 'Crafted from high-quality fabrics,these shirts are perfect for any occasion ' },
                    { img: 'https://i.imgur.com/NEgIMmd.jpeg', name: 'Modern fit shirt', price: 'KSh 1500', desc: 'Featuring modern fits and a variety of colors and patterns ' },
                    { img: 'https://i.imgur.com/Ka6m1j7.jpeg', name: ' Cotton shirt', price: 'KSh 2000', desc: 'High-quality made from 100% cotton' },
                    { img: 'https://i.imgur.com/Y8qs63M.jpeg', name: 'Summer Duo wear', price: 'KSh 2200', desc: 'Crafted from lightweight, breathable fabrics to keep you cool all season long ' },
                    { img: 'https://i.imgur.com/GnDYIMX.jpeg', name: 'Easy outfit', price: 'KSh 2500', desc: ' Perfect combination of a stylish shirt and comfortable trouser crafted from lightweight material ' }
                ];
            } else if (category === 'women') {
                productData = [
                    { img: 'https://i.imgur.com/9KroKCB.jpeg', name: 'Tailored trouser', price: 'KSh 1000', desc: 'Designed to flatter and enhance your silhouette while providing all-day comfort ' },
                    { img: 'https://i.imgur.com/Vd5JFqG.jpeg', name: 'Feminine fit pants', price: 'KSh 1200', desc: 'Made from high-quality stretchy fabric, they allow easy movement without sacrificing style ' },
                    { img: 'https://i.imgur.com/tzpFchM.jpeg', name: 'Classic Comfort Short', price: 'KSh 1500', desc: 'With a versatile cut that flatter all body types, they feature an adjustable waistband for a customizable fit' },
                    { img: 'https://i.imgur.com/J9OYiu0.jpeg', name: 'Classic cotton crop', price: 'KSh 1000', desc: 'Made from soft breathable cotton, this top offers comfort and a flattering fit for any occasion ' }
                ];
            }

            productData.forEach(product => {
                const productDiv = document.createElement('div');
                productDiv.innerHTML = `
                    <img src="${product.img}" alt="${product.name}" onclick="showProductDetails('${product.img}', '${product.name}', '${product.price}', '${product.desc}')">
                    <h3>${product.name}</h3>
                    <p>${product.price}</p>
                    <button onclick="addToCart('${product.name}', '${product.price}', '${product.img}')">Add to Cart</button>
                `;
                products.appendChild(productDiv);
            });
            showSection('shop');
        }

        function showProductDetails(img, name, price, desc) {
            const details = `
                <div>
                    <img src="${img}" alt="${name}" style="width:270px;">
                    <h3>${name}</h3>
                    <p>${desc}</p>
                    <p>${price}</p>
                </div>
            `;
            document.getElementById('products').innerHTML = details; // Show details
        }

        let cart = [];

        function addToCart(name, price, img) {
            cart.push({ name, price, img });
            updateCart();
        }

        function updateCart() {
            const cartItems = document.getElementById('cartItems');
            cartItems.innerHTML = '';
            let total = 0;

            cart.forEach(item => {
                cartItems.innerHTML += `
                    <div>
                        <img src="${item.img}" alt="${item.name}" style="width:50px;">
                        <p>${item.name} - ${item.price}</p>
                        <button onclick="removeFromCart('${item.name}')">Remove</button>
                    </div>
                `;
                total += parseFloat(item.price.replace('KSh ', ''));
            });

            document.getElementById('totalCost').innerHTML = `Total: KSh ${total}`;
        }

        function removeFromCart(name) {
            cart = cart.filter(item => item.name !== name);
            updateCart();
        }

        function checkout() {
            if (cart.length === 0) {
                alert('Your cart is empty.');
                return;
            }
            const total = cart.reduce((sum, item) => sum + parseFloat(item.price.replace('KSh ', '')), 0);
            document.getElementById('totalAmount').innerHTML = `Total Amount: KSh ${total}`;
            document.getElementById('checkoutDetails').innerHTML = cart.map(item => `<p>${item.name} - ${item.price}</p>`).join('');
            showSection('checkout');
        }

        function initiatePayment() {
            const pin = prompt("Enter your M-Pesa PIN to complete the payment:");
            if (pin) {
                alert(`Payment of KSh ${cart.reduce((sum, item) => sum + parseFloat(item.price.replace('KSh ', '')), 0)} completed successfully.`);
                cart = []; // Clear the cart after payment
                updateCart();
                showSection('home'); // Go back to home after payment
            } else {
                alert('Payment cancelled.');
            }
        }

        function sendMessage(event) {
            event.preventDefault();
            alert('Message sent successfully');
        }
    </script>
</body>
